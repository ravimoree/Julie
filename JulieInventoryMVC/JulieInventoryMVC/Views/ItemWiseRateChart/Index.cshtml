@using JulieInventoryMVC.App_Resources;
@model  PagedList.IPagedList<JulieInventoryMVC_Models.WorkerEmployee.WorkerItemWiseRate>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Item Wise Rate Chart";
}
<style>
    .wizard > .content {
        background: none !important;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .form-control {
        border-left: none !important;
        border-top: none !important;
        border-right: none !important;
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/files/bower_components/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/pages/data-table/css/buttons.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/bower_components/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/icon/icofont/css/icofont.css">

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-inline">
                                        @GlobalRes.Rate_Chart_List
                                    </div>
                                    <h5>Grid View</h5>
                                    <a href="/ItemWiseRateChart/Create" class="btn waves-effect waves-light btn-success" title="Create" style="float:right">Create</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="tblItemMaster" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr style="text-align:left;">
                                                    <th>Sr.</th>
                                                    <th>Worker Name</th>
                                                    <th>Item Name</th>
                                                    <th>Work Name</th>
                                                    <th>% Or 0</th>
                                                    <th>Rate</th>
                                                    <th>Effective From</th>
                                                    <th>Remarks</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int serialNumber = (Model.PageNumber - 1) * Model.PageSize + 1;
                                                }
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @serialNumber
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.LedgerName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ItemGroupName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.WorkName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.PerAmt)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.EffectiveFrom)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Rate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Remarks)
                                                        </td>
                                                        <td>
                                                            <a href="/ItemWiseRateChart/Edit?id=@item.Id" class="btn waves-effect waves-light btn-success" title="Edit"><i class="icofont icofont-ui-edit"></i></a>
                                                            <a href="/ItemWiseRateChart/Details?id=@item.Id" class="btn waves-effect waves-light btn-info" title="info"><i class="icofont icofont-eye-alt"></i></a>
                                                            <a href="#" class="btn waves-effect waves-light btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icofont icofont-ui-delete"></i></a>
                                                        </td>
                                                    </tr>
                                                    serialNumber = serialNumber + 1;
                                                }
                                            </tbody>
                                        </table>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-5">
                                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                                                of @Model.PageCount
                                            </div>
                                            <div class="col-xs-12 col-sm-12  col-md-7">
                                                @Html.PagedListPager(Model, page => Url.Action("Index", new { sortOrder = ViewBag.CurrentSort, page, currentFilter = ViewBag.CurrentFilter }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Content/files/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/files/assets/pages/data-table/js/vfs_fonts.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/files/assets/pages/data-table/js/data-table-custom.js"></script>
}