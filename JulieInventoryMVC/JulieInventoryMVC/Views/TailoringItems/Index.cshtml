@using JulieInventoryMVC.App_Resources;
@using PagedList;
@using PagedList.Mvc;
@model  PagedList.IPagedList<JulieInventoryMVC_Models.ItemMaster.TItemMaster>


@{
    ViewBag.Title = "Tailoring Items Master";

}

<link rel="stylesheet" type="text/css" href="~/Content/files/bower_components/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/pages/data-table/css/buttons.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/bower_components/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/icon/icofont/css/icofont.css">
<style>
    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
    }

    .pagination li {
         margin: 0 5px;
    }

    .pagination a {
        display: block;
        padding: 8px 12px;
        text-decoration: none;
        color: #333;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .pagination a:hover {
        background-color: #ddd;
    }

    .pagination .PagedList-selPage {
        font-weight: bold;
        background-color: #337ab7;
        color: #fff;
    }

    page-item.active .page-link {
        background-color: #4099ff;
        border-color: #4099ff;
    }

    .pagination-container {
        float: right !important;
    }
</style>
<div class="pcoded-content">
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="feather icon-inbox bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Tailoring Items Master</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class=" breadcrumb breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a href="/Home/Index"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!"> @GlobalRes.Master</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Tailoring Items Master</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Grid View</h5>
                                    <a href="/TailoringItems/Create" class="btn waves-effect waves-light btn-success" title="Create" style="float:right">Create</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <div class="page-count" style="display:inline-block; vertical-align:middle;">
                                            @using (Html.BeginForm("Index", "TailoringItems", FormMethod.Get, new { id = "form1" }))

                                            {
                                                <div id='Paging' style="text-align: center">
                                                    Page Size: @Html.DropDownList("pageSize")
                                                </div>
                                            }
                                        </div>

                                        <table id="tblItemMaster" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr style="text-align:center;">
                                                    <th>Sr.</th>
                                                    <th>Item Name</th>
                                                    <th>Rate</th>
                                                    <th>C.Rate</th>
                                                    <th>S.Rate</th>
                                                    <th>ItemType</th>
                                                    <th>GST%</th>
                                                    <th>Alter</th>
                                                    <th>Sewing (R)</th>
                                                    <th>Sewing JW</th>
                                                    <th>Sewing JW (R)</th>
                                                    <th>Alter Chrg.</th>
                                                    <th>Alter (R)</th>
                                                    <th>Unit / Hrs</th>
                                                    <th>Group Name</th>
                                                    <th>Action </th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @{ int sr = 1;}
                                                @foreach (var item in Model)
                                                {

                                                    <tr>
                                                        <td>
                                                            @sr
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TItemName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TItemRate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CuttingRate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.SewingRate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ItemType)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TaxPer)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AlterRate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AlterRate)

                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.SewingRate_R)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.SewingRate_Jw)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.SewingRate_Jw_R)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.AlterCharge_R)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.OnePieceStitchingHrs)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ItemGroupName)
                                                        </td>
                                                        <td>
                                                            <a href="/TailoringItems/Edit?id=@item.TItemId" class="btn waves-effect waves-light btn-success" title="Edit"><i class="icofont icofont-ui-edit"></i></a>
                                                            <a href="/TailoringItems/Details?id=@item.TItemId" class="btn waves-effect waves-light btn-info" title="info"><i class="icofont icofont-eye-alt"></i></a>
                                                            <a href="/TailoringItems/Delete?id=@item.TItemId" class="btn waves-effect waves-light btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');"><i class="icofont icofont-ui-delete"></i></a>
                                                        </td>
                                                    </tr>
                                                    sr = sr + 1;
                                                }
                                            </tbody>
                                        </table>
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-5">
                                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                                                of @Model.PageCount

                                            </div>
                                            <div class="col-xs-12 col-sm-12  col-md-7" >
                                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = ViewBag.psize }))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script src="~/Content/files/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/files/assets/pages/data-table/js/vfs_fonts.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/files/bower_components/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/files/assets/pages/data-table/js/data-table-custom.js"></script>
    <script>
        $(function () {
            $("#pageSize").change(function () {
                alert("abc");
                $("#form1").submit();
            });
        });

    </script>
}
