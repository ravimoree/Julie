@using JulieInventoryMVC.App_Resources;
@model JulieInventoryMVC_Models.WorkerEmployee.WorkerEmployeeVM

@{
    ViewBag.Title = "Create";
}
@{
    ViewBag.Title = GlobalRes.Employee_Create;
}
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/pages/advance-elements/css/bootstrap-datetimepicker.css">
<link rel="stylesheet" type="text/css" href="~/Content/files/bower_components/bootstrap-daterangepicker/css/daterangepicker.css" />
<link rel="stylesheet" type="text/css" href="~/Content/files/assets/icon/icofont/css/icofont.css">
<style>

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .form-control {
        border-left: none !important;
        border-top: none !important;
        border-right: none !important;
    }
</style>
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12" style="float:left;">
                            <div class="card">
                                <div class="card-header">
                                    <h5>@GlobalRes.Employee_Create</h5>
                                </div>
                                <div class="card-block">
                                    <form method="post" action="/EmployeeMaster/Create/">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="LedgerCode" id="LedgerCode" placeholder="Enter code" />
                                                                <label>Code</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                @Html.DropDownList("CustType", new SelectList(ViewBag.EmpGrade, "MiscId", "MiscName"), "-- Select Gender --", new { @class = "form-control" })
                                                                <label>Gender</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="LedgerName" id="LedgerName" placeholder="Enter name" />
                                                                <label>Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="BeneficiaryName" id="BeneficiaryName" placeholder="Enter name" />
                                                                <label>Work Type</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">

                                                                @Html.DropDownList("G_Id", new SelectList(ViewBag.GroupMasters, "G_Id", "G_Name"), "-- Select Group --", new { @class = "form-control" })

                                                                <label>A/c Group</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="Address1" id="Address1" placeholder="Enter address" />
                                                                <label>Address 1</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="Address2" id="Address2" placeholder="Enter address" />
                                                                <label>Address 2</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="MobileNo" id="MobileNo" placeholder="Enter mobile" />
                                                                <label>Mob. No.</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="MobileNo2" id="MobileNo2" placeholder="Enter mobile" />
                                                                <label>Mob. No.</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="PhoneNo" id="PhoneNo" placeholder="Enter phone" />
                                                                <label>Ph. Mo.</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="email" name="AcEmailId" id="AcEmailId" placeholder="Enter e-mail" />
                                                                <label>E-mail</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="City" id="City" placeholder="Enter city" />
                                                                <label>City</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="number" name="PinCode" id="PinCode" placeholder="Enter Pincode" />
                                                                <label>Pincode</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="State" id="State" placeholder="Enter State" />
                                                                <label>State</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="GSTNo" id="GSTNo" placeholder="Enter gst no" />
                                                                <label>GST NO.</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="Country" id="Country" placeholder="Enter country code" />
                                                                <label>Country</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <select name="Taxation" id="Taxation" class="form-control">
                                                                    <option value="0">Select Taxtion</option>
                                                                </select>
                                                                <label>Taxtion</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                @Html.DropDownList("FaxNo", new SelectList(ViewBag.SalaryType, "MiscId", "MiscName"), "-- Select Gender --", new { @class = "form-control" })
                                                                <label>Salary Type</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="PANNo" id="PANNo" placeholder="Enter pan no" />
                                                                <label>Pan No.</label>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control" type="date" name="BirthDate" id="BirthDate" />
                                                                <label>Birth Date</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control" type="date" name="AnniDate" id="AnniDate" />
                                                                <label>Anni. Date</label>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="checkbox-fade fade-in-primary" style="margin-top:10%">
                                                                <label>
                                                                    <input type="checkbox" id="IsActive" name="IsActive" value="1" class="input-danger">
                                                                    <span class="cr">
                                                                        <i class="cr-icon icofont icofont-ui-check txt-primary"></i>
                                                                    </span>
                                                                    <span>Is Active</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="OpBal" id="OpBal" placeholder="Enter opening balance" />
                                                                <label>Opening Balance</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <select name="BankAcType" id="BankAcType" class="form-control">
                                                                    <option value="0">Select type</option>
                                                                </select>
                                                                <label>A/c Type</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="BankAcNo" id="BankAcNo
                                                                       " placeholder="Enter account" />
                                                                <label>Account</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="IFSCCode" id="IFSCCode" placeholder="Enter ifsc" />
                                                                <label>IFSC</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="MICRCode" id="MICRCode" placeholder="Enter micr" />
                                                                <label>MICR</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="BankName" id="BankName" placeholder="Enter bank name" />
                                                                <label>Bank Name</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <textarea class="form-control fill" type="text" name="BankAddress" id="BankAddress" placeholder="Enter address"></textarea>
                                                                <label>Bank Add.</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="AcContactPerson" id="AcContactPerson" placeholder="Enter a/c person" />
                                                                <label>A/c Person</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="AcContactNo" id="AcContactNo" placeholder="Enter a/c contact" />
                                                                <label>A/c Contact</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group form-primary">
                                                                <input class="form-control fill" type="text" name="AcEmailId" id="AcEmailId" placeholder="Enter a/c email" />
                                                                <label>A/c Email</label>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="card-block" style="float:right">
                                                    <button class="btn waves-effect waves-light btn-success btn-outline-success" id="SaveBtn">
                                                        <i class="icofont icofont-check-circled"></i>Save
                                                    </button>
                                                    <button class="btn waves-effect waves-light btn-danger btn-outline-danger">
                                                        <i class="icofont icofont-eye-alt"></i>Cancel
                                                    </button>
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{

    <script type="text/javascript" src="~/Content/files/assets/pages/advance-elements/bootstrap-datetimepicker.min.js"></script>

}